set Additional shared libraries            = ./libtime_dependent_annulus_01.so

############### Global parameters

set Dimension                              = 2

set Start time                             = 0

set End time                               = 0

set Output directory                       = output_debug

set Nonlinear solver scheme                = Stokes only

set CFL number                             = 0.9

set Linear solver tolerance                = 1e-14

set Use years in output instead of seconds = false

set Pressure normalization                 = surface

set Resume computation                     = false
############### Parameters describing the model

subsection Geometry model
  set Model name = spherical shell

  subsection Spherical shell
    set Inner radius = 1
    set Outer radius = 2
    set Opening angle = 360
  end
end

subsection Model settings
  set Prescribed velocity boundary indicators = 0: function, 1: function
  set Tangential velocity boundary indicators =
  set Zero velocity boundary indicators       =
end

subsection Boundary velocity model
  subsection Function
    set Function constants  = pi=3.1415926
    set Variable names      = x,y
    set Function expression = -y*sqrt(x^2 + y^2);x*sqrt(x^2 + y^2)
  end
end

subsection Material model
  set Model name = TimeDependentAnnulusMaterialModel

  subsection Time dependent annulus material model
    #Do not change these set of parameters! EGP && HL
    set Viscosity jump = 1
    set Reference density = 1

    subsection Analytical density
      subsection Function
        set Variable names = x, y
        set Function expression = ((sqrt(x^2 + y^2))^3)/3
      end
    end

    subsection Analytical pressure
      subsection Function
        set Variable names = x, y
        set Function expression = -(((x^2 + y^2)^2)/12) + 4/3
      end
    end

    subsection Analytical velocity
      subsection Function
        set Variable names = x, y
        set Function expression = -y*sqrt(x^2 + y^2);x*sqrt(x^2 + y^2)
      end
    end
  end
  set Material averaging = none
end


subsection Gravity model
  set Model name = function
  subsection Radial constant
    set Magnitude = 1
  end

  subsection Function
    set Variable names      = x,y
    set Function expression = (-x)/sqrt(x^2+y^2) + ((9*y)/((x^2+y^2)^2));(-y)/sqrt(x^2+y^2) - ((9*x)/((x^2+y^2)^2))
  end
end

############### Parameters describing the temperature field

subsection Boundary temperature model
  set List of model names = box

  subsection Box
    set Bottom temperature = 0
    set Top temperature    = 0
  end
end


subsection Initial temperature model
  set Model name = function
  subsection Function
    set Function expression = 0
  end
end

subsection Adiabatic conditions model
  set Model name = function

  subsection Function
    set Function constants  =
    set Function expression = 0; 0; 0
    set Variable names      = depth
  end

end

############### Parameters describing the discretization

subsection Discretization
  set Stokes velocity polynomial degree       = 2
  set Use locally conservative discretization = false
  set Use discontinuous composition discretization = true
end


subsection Mesh refinement
  set Refinement fraction         = 0
  set Coarsening fraction         = 0
  set Initial adaptive refinement = 0
  set Initial global refinement   = 2
end

############### Parameters describing what to do with the solution

subsection Postprocess
  # To visualize, append 'visualization' to list of postprocessors.
  set List of postprocessors = TimeDependentAnnulusPostprocessor
 
  subsection Visualization
    set Output format                 = vtu
    set Number of grouped files       = 1
    set Time between graphical output = 0
    set List of output variables      = density, gravity
  end
end

subsection Termination criteria
  set Checkpoint on termination = true
  set Termination criteria      = user request

  subsection User request
    set File name = end
  end
end

subsection Checkpointing
  # The number of timesteps between performing checkpoints. If 0 and time
  # between checkpoint is not specified, checkpointing will not be performed.
  # Units: None.
  set Steps between checkpoint = 0

  # The wall time between performing checkpoints. If 0, will use the
  # checkpoint step frequency instead. Units: Seconds.
  set Time between checkpoint  = 7200
end

